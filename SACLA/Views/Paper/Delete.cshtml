@model SACLA.Models.Paper

@{
    Layout = "~/Views/Shared/logedin.cshtml";
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Paper</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PaperTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PaperTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PaperAbstract)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PaperAbstract)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PaperAuthor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PaperAuthor)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PaperDateSubmitted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PaperDateSubmitted)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.topic.TopicName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.topic.TopicName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group" style="display:inline">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-default" onclick="Confirmationfun()" style="background-color:cornflowerblue;color:white;" />
                <form action="~/Views/Paper/MyPapers.cshtml">
                    <input type="submit" value="Back to List" class="btn btn-default" style="background-color:white;color:cornflowerblue;border-color:cornflowerblue;" />
                </form>
            </div>
        </div>
    }
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    function Confirmationfun() {
        var input = $("<input/>");
        input.attr("type", "hidden").attr("name", "confirm_value");
        if (confirm("Are you sure you want to delete this paper?")) {
            input.val("Yes");
        }
        else {
            input.val("No");
        }
        $("form")[0].appendChild(input[0]);
    }
</script>
@if(ViewBag.Message != null)
{
    <script type="text/javascript">
        $(function () {
            alert("@ViewBag.Message")
        });
    </script>
}